{
	"$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"files": {
		"ignore": [
			"node_modules/**",
			"/srv/app/node_modules/**",
			"Makefile",
			"docker-compose.yml",
			"bun.lockb",
			"package.json",
			"tsconfig.json"
		],
		"include": ["**/*.ts", "**/*.tsx"]
	}
}
